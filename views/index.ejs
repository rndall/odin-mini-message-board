<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/reset.css" />
    <title>Homepage</title>
  </head>

  <body>
    <a href="/new">New Message</a>

    <ul>
      <% messages.forEach(message => { %>
      <a href="<%= message.id %>">
        <p><%= message.user %></p>
        <p><%= message.text %></p>
        <p><%= message.added %></p>
      </a>
      <% }) %>
    </ul>
  </body>
</html>
